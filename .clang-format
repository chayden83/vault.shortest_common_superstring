Language: Cpp
BasedOnStyle: LLVM

# --- Core Layout ---
ColumnLimit: 120
IndentWidth: 2
ContinuationIndentWidth: 2
UseTab: Never
Standard: Latest

# --- Braces (Egyptian Style) ---
BreakBeforeBraces: Attach
AllowShortBlocksOnASingleLine: false
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

# --- Indentation & Namespaces ---
NamespaceIndentation: All
AccessModifierOffset: -2

# --- Constructor Initializer Lists ---
# Forces each member to its own line for clarity
BreakConstructorInitializers: BeforeComma
ConstructorInitializerIndentWidth: 2
ConstructorInitializerAllOnOneLineOrOnePerLine: true
AllowAllConstructorInitializersOnNextLine: true

# --- Whitespace and Separation ---
SpaceBeforeParens: ControlStatements
SpaceAfterTemplateKeyword: true
PointerAlignment: Left
MaxEmptyLinesToKeep: 1
SpaceBeforeAssignmentOperators: true
SpaceInEmptyParentheses: false

# --- Alignment and Wrapping ---
AlignConsecutiveAssignments: None
AlignConsecutiveDeclarations: None
AlignTrailingComments: true
RequiresClausePosition: OwnLine
IndentRequiresClause: true
AllowAllParametersOfDeclarationOnNextLine: false
BinPackParameters: false
BinPackArguments: false

# --- Attribute and Qualifier Handling ---
AllowShortAttributesOnASingleLine: false

# --- Reflow and Comments ---
ReflowComments: true
BreakStringLiterals: false

# --- Include Grouping (Up to 3 levels deep) ---
SortIncludes: CaseSensitive
IncludeBlocks: Regroup
IncludeCategories:
  - Regex:           '^<[^/]+>$'
    Priority:        10
  - Regex:           '^<[^/]+/[^/]+>$'
    Priority:        20
  - Regex:           '^<[^/]+/[^/]+/[^/]+>$'
    Priority:        30
  - Regex:           '^<[^/]+/[^/]+/[^/]+/.+>$'
    Priority:        40
  - Regex:           '^"[^"]+"'
    Priority:        50
