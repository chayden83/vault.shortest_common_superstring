---
Language: Cpp
BasedOnStyle: LLVM

# --- Indentation & Alignment ---
IndentWidth: 2
TabWidth: 2
UseTab: Never
ColumnLimit: 80
PointerAlignment: Left

# --- Vertical Alignment ---
AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true
AlignConsecutiveBitFields: true

# --- Vertical Spacing ---
# This inserts the blank line between functions you asked for
SeparateDefinitionBlocks: Always
# This allows you to manually place blank lines inside functions without them being deleted
KeepEmptyLinesAtTheStartOfBlocks: true
MaxEmptyLinesToKeep: 1
EmptyLineBeforeAccessModifier: Always

# --- Imports & Namespaces ---
SortIncludes: CaseSensitive
FixNamespaceComments: true
NamespaceIndentation: All

# --- Brace Style ---
BreakBeforeBraces: Custom
BraceWrapping:
  # This moves the Constructor brace to a new line
  AfterFunction: true
  # These keep logic braces (if/for) on the same line
  AfterControlStatement: false
  AfterClass: false
  AfterEnum: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeElse: false
  BeforeCatch: false
  SplitEmptyFunction: false

# --- Logic Blocks ---
InsertBraces: true
RemoveBracesLLVM: false
AllowShortBlocksOnASingleLine: Never
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false

# --- Constructor Initializers ---
BreakConstructorInitializers: BeforeComma
ConstructorInitializerIndentWidth: 4
PackConstructorInitializers: Never
ConstructorInitializerAllOnOneLineOrOnePerLine: true

# --- Short Functions ---
# Allows simple destructors to sit on one line
AllowShortFunctionsOnASingleLine: All

# --- Arguments ---
AlignAfterOpenBracket: BlockIndent
ContinuationIndentWidth: 4
BinPackArguments: false
BinPackParameters: false